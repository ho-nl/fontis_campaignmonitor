<config>
    <sections>
        <newsletter>
            <groups>
                <campaignmonitor translate="label" module="campaignmonitor">
                <label>Campaign Monitor Settings</label>
                <frontend_type>text</frontend_type>
                <sort_order>0</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
                <fields>
                    <api_key translate="label comment" module="campaignmonitor">
                        <label>API Key</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>1</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <comment>This can be found on your Account Settings page in Campaign Monitor.</comment>
                    </api_key>
                    <list_id translate="label comment" module="campaignmonitor">
                        <label>API List ID</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>2</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <comment>Magento users who subscribe/unsubscribe to the newsletter will be added/removed from this Campaign Monitor email list.</comment>
                    </list_id>
                    <m_to_cm_attributes translate="label comment" module="campaignmonitor">
                        <label>Attributes to pass to Campaign Monitor</label>
                        <frontend_model>fontis_campaignMonitor_block_linkedattributes</frontend_model>
                        <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                        <sort_order>25</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <comment/>
                    </m_to_cm_attributes>
                    <check_credentials translate="label comment button_label" module="campaignmonitor">
                        <frontend_type>button</frontend_type>
                        <frontend_model>campaignmonitor/adminhtml_system_config_button</frontend_model>
                        <button_label>Sync Manually</button_label>
                        <button_url>adminhtml/campaignmonitor/sync</button_url>
                        <sort_order>300</sort_order>
                        <show_in_default>1</show_in_default>
                        <comment>Please save configuration first. This may take a while.</comment>
                    </check_credentials>
                </fields>
            </campaignmonitor>
            </groups>
        </newsletter>
    </sections>
</config>
